<div class="container" style="margin-top: 5%;">
  <div class="columns">
    <div class="column" style="margin-bottom: 2.5%">
      <article class="media" style="align-items: center;">
        <figure class="media-left">
          <p class="image">
            <%= image_tag @formula.image.url(:medium) %>
          </p>
        </figure>
        <div class="media-content" style="margin-left: 5%; background-color: rgba(0, 0, 0, 0.1);">
          <div class="content" style="padding: 2.5%">
            <p>
              <strong><%= @formula.user.username %></strong>
              <br>
              <h1><%= @formula.title %></h1>
              <p><%= @formula.description %></p>
            </p>
          </div>
        </div>
      </article>
    </div>
  </div>

  <div class="columns">
    <div class="column is-half">
      <h1 class="title">Ingredients</h1>
      <% @count = 0 %>
      <% @formula.ingredients.each_with_index do |ingredient| %>
        <p><%= @count += 1 %>. <%= ingredient.name %></p>
      <% end %>
    </div>
    <div class="column is-half">
      <h1 class="title">Directions</h1>
      <% @count = 0 %>
      <% @formula.directions.each do |direction| %>
        <p><%= @count += 1 %>. <%= direction.step %></p>
      <% end %>
    </div>
  </div>
</div>